<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
      http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <configuration>
        <custom-converters>
            <converter type="com.kyripay.payment.mapping.PaymentRequestConverter">
                <class-a>com.kyripay.payment.dto.PaymentRequest</class-a>
                <class-b>com.kyripay.payment.domain.Payment</class-b>
            </converter>
            <converter type="com.kyripay.payment.mapping.PaymentResponseConverter">
                <class-a>com.kyripay.payment.domain.Payment</class-a>
                <class-b>com.kyripay.payment.dto.PaymentResponse</class-b>
            </converter>
            <converter type="com.kyripay.payment.dao.impl.jooq.mapping.PaymentRecordConverter">
                <class-a>com.kyripay.payment.dao.impl.jooq.meta.tables.records.PaymentRecord</class-a>
                <class-b>com.kyripay.payment.domain.Payment</class-b>
            </converter>

            <converter type="com.kyripay.payment.mapping.PaymentTemplateRequestConverter">
                <class-a>com.kyripay.payment.dto.PaymentTemplateRequest</class-a>
                <class-b>com.kyripay.payment.domain.PaymentTemplate</class-b>
            </converter>
            <converter type="com.kyripay.payment.mapping.PaymentTemplateResponseConverter">
                <class-a>com.kyripay.payment.domain.PaymentTemplate</class-a>
                <class-b>com.kyripay.payment.dto.PaymentTemplateResponse</class-b>
            </converter>
            <converter type="com.kyripay.payment.dao.impl.jooq.mapping.PaymentTemplateRecordConverter">
                <class-a>com.kyripay.payment.dao.impl.jooq.meta.tables.records.PaymentTemplateRecord</class-a>
                <class-b>com.kyripay.payment.domain.PaymentTemplate</class-b>
            </converter>
        </custom-converters>
    </configuration>
</mappings>